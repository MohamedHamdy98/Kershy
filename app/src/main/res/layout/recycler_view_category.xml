<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#2A2A32"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#2A2A32"
                app:cardCornerRadius="8dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/imageView_recycler_category_burger"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/burgeritemback" />
            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_recycler_category_burger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Creamy nachos"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ru.embersoft.expandabletextview.ExpandableTextView
                android:id="@+id/text_description_recycler_category_burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:etv_animationTime="20"
                app:etv_expandLines="0"
                app:etv_showLine="false"
                android:paddingBottom="10dp"
                app:etv_textContentSize="14sp"
                app:etv_textExpand="Show more!"
                app:etv_textShrink="Show less!"
                app:etv_textContentColor="#fff"
                app:etv_textStateColor="#fff"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_price_recycler_category_burger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:background="@drawable/cardview_circle_plus_an_mins"
                            android:orientation="horizontal">
                        <Button
                            android:layout_width="18dp"
                            android:layout_height="3dp"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_newmins"/>
                            <TextView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:text="1"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:textColor="#00CB2C"/>
                            <Button
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_newplus"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>